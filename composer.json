    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",    
        "guzzlehttp/guzzle": "^7.5",
        "symfony/dotenv": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
